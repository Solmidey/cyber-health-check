{
  "manifest_version": 3,
  "name": "ThreatPulse",
  "version": "0.1.0",
  "description": "Real-time web risk alerts for teams (MVP).",
  "icons": {
  "16": "icons/icon-16.png",
  "32": "icons/icon-32.png",
  "48": "icons/icon-48.png",
  "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "ThreatPulse",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs", "webNavigation", "downloads", "notifications"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
